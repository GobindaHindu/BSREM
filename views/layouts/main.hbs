  <script>
    $(document).ready(function () {
      $('.fa-bars').click(function () {
        $(this).toggleClass('fa-times')
        $('.navbar').toggleClass('nav-toggle')
        // Call custom function here
        customFunction();
      })

      // Custom function to be executed when hamburger menu is clicked
      function customFunction() {
        $('.header .logo').css('font-size', '170%');  // Adjust as needed


      }

      $(window).on('load scroll', function () {
        $('.fa-bars').removeClass('fa-times')
        $('.navbar').removeClass('nav-toggle')

        if ($(window).scrollTop() > 30) {
          $('.header').css({ 'background': '#e67300', 'box-shadow': '0 .2rem .5rem rgba(0,0,0,.4)' });
          $('.logo').css({ 'font-size': '160%' })
        } else {
          $('.header').css({ 'background': 'none', 'box-shadow': 'none' });
          $('.logo').css({ 'font-size': '200%' })
        }
      })

      $('.accordion-header').click(function () {
        $('.accordion .accordion-body').slideUp();
        $(this).next('.accordion-body').slideDown();
        $('.accordion .accordion-header span').text('+');
        $(this).children('span').text('-');
      });


    })

    var swiper = new Swiper(".mySwiper", {
      effect: "coverflow",
      grabCursor: true,
      centeredSlides: true,
      slidesPerView: "auto",
      coverflowEffect: {
        rotate: 50,
        stretch: 0,
        depth: 100,
        modifier: 1,
        slideShadows: true,
      },
      pagination: {
        el: ".swiper-pagination",
      },
    });

